                <div class="checkbox">
                    @Html.EditorFor(model => model.Wycofany)
                    @Html.ValidationMessageFor(model => model.Wycofany, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>

